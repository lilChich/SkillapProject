@using Microsoft.AspNetCore.Identity;

@using Skillap.DAL.Entities;
@using Skillap.BLL.Interfaces.IServices;
@model Skillap.MVC.ViewModels.UserViewModel
@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
@inject SignInManager<ApplicationUsers> signInManager;
@inject IAuthService userService;
@{
    var user = await userService.GetUserAsync(User.Identity.Name);

    string photoPath;

    if (user.Image.Contains("googleusercontent"))
    {
        photoPath = user.Image;
    }
    else
    {
        photoPath = "~/images/" + user.Image;
    }


}
<div class="row">
    <div class=" col-md-9 offset-md-1 mt-3">
        <form method="get" class="mt-3">
            <div class="row">
                <div class="form-group">
                    <div class="col pb-2">
                        <img id="profileImage" src="@photoPath" asp-append-version="true" style="width:300px" class="rounded" alt="" />
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <p id="nickName">@user.NickName</p>
                    </div>
                    <div class="form-group">
                        <p>@user.Email</p>
                    </div>
                    <div class="form-group">
                        @if (user.Gender == true)
                        {
                            <p>
                                Male from @user.Country
                            </p>
                        }
                        else
                        {
                            <p>
                                Female from @user.Country
                            </p>
                        }

                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <label id="add_text" asp-for="FirstName"></label>
                        <input asp-for="FirstName" class="form-control" disabled />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label id="add_text" asp-for="SecondName"></label>
                        <input asp-for="SecondName" class="form-control" disabled />
