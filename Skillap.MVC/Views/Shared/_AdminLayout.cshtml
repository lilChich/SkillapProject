@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService authService

@{
    ViewData["Title"] = "MyAccount";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row pb-5">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <ul class="nav nav-tabs card-header-tabs nav-fill">

                    @if (User.IsInRole("Admin"))
                    {
       
                        <li class="nav-item"><a id="main_text_authorization" class="nav-link" asp-controller="Logic" asp-action="ManageUsers">Users</a></li>
                        <li class="nav-item"><a id="main_text_authorization" class="nav-link" asp-controller="Logic" asp-action="ManagePosts">Posts</a></li>
                        <li class="nav-item"><a id="main_text_authorization" class="nav-link" asp-controller="Logic" asp-action="ManageMasterClasses">MasterClasses</a></li>
                        <li class="nav-item"><a id="main_text_authorization" class="nav-link" asp-controller="Logic" asp-action="ManageMasters">Masters</a></li>
                        
                        <li class="nav-item"><a id="main_text_authorization" class="nav-link" asp-controller="Logic" asp-action="ManageTags">Tags</a></li>
                        <li class="nav-item"><a id="main_text_authorization" class="nav-link" asp-controller="Logic" asp-action="Masters">Choose Masters</a></li>
                        <li class="nav-item"><a id="main_text_authorization" class="nav-link" asp-controller="Logic" asp-action="Post">Create Post</a></li>
                        <li class="nav-item"><a id="main_text_authorization" class="nav-link" asp-controller="Logic" asp-action="Tag">Create Tag</a></li>
                    }

                </ul>
            </div>
            <div class="card-content">
                <div class="row">
                    <div class="col-md-12">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)

    <script>
    $(function () {
        var current = location.pathname;
        $('.nav-tabs li a').each(function () {
            var $this = $(this);
            if (current.indexOf($this.attr('href')) !== -1) {
                $this.addClass('active');
            }
        })
    })
    </script>


}