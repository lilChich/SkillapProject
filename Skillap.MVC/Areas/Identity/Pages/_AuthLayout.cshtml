
@{
    ViewData["Title"] = "Authorization";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card login-logout-tab mb-lg-5 mt-lg-2">
            <div class="card-header">
                <ul class="nav nav-tabs card-header-tabs nav-fill">
                    <li class="nav-item">
                        <a id="main_text_authorization" class="nav-link" asp-controller="Account" asp-action="Login">Sign In</a>
                    </li>
                    <li class="nav-item">
                        <a id="main_text_authorization" class="nav-link" asp-controller="Account" asp-action="Register">Sign Up</a>
                    </li>
                </ul>
            </div>
            <div class="card-content">
                <div class="row">
                    <div class="col-md-12">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)

    <script>
    $(function () {
        var current = location.pathname;
        $('.nav-tabs li a').each(function () {
            var $this = $(this);
            if (current.indexOf($this.attr('href')) !== -1) {
                $this.addClass('active');
            }
        })
    })
    </script>


}